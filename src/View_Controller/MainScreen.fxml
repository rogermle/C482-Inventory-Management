<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="375.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TableView fx:id="partsTableView" layoutX="14.0" layoutY="112.0" prefHeight="175.0" prefWidth="400.0">
        <columns>
          <TableColumn fx:id="partIdCol" prefWidth="100.0" text="Part ID" />
          <TableColumn fx:id="partNameCol" prefWidth="100.0" text="Part Name" />
            <TableColumn fx:id="partStockCol" prefWidth="100.0" text="Inventory Level" />
            <TableColumn fx:id="partPriceCol" prefWidth="100.0" text="Price Per Unit" />
        </columns>
      </TableView>
      <TableView fx:id="productsTableView" layoutX="435.0" layoutY="112.0" prefHeight="175.0" prefWidth="400.0">
        <columns>
          <TableColumn fx:id="productIdCol" prefWidth="100.0" text="Product ID" />
          <TableColumn fx:id="productNameCol" prefWidth="100.0" text="Product Name" />
            <TableColumn fx:id="productStockCol" prefWidth="100.0" text="Inventory Level" />
            <TableColumn fx:id="productPriceCol" prefWidth="100.0" text="Price per Unit" />
        </columns>
      </TableView>
      <Label id="partsLbl" layoutX="15.0" layoutY="78.0" text="Parts">
         <font>
            <Font name="Times New Roman" size="24.0" />
         </font>
      </Label>
      <Label id="productsLbl" layoutX="435.0" layoutY="80.0" text="Products">
         <font>
            <Font name="Times New Roman" size="24.0" />
         </font>
      </Label>
      <Label id="inventoryManagementSystemLbl" layoutX="14.0" layoutY="27.0" text="Inventory Management System">
         <font>
            <Font name="Times New Roman" size="24.0" />
         </font>
      </Label>
      <Button id="partsSearchBtn" fx:id="partsSearchBtn" layoutX="340.0" layoutY="75.0" mnemonicParsing="false" onAction="#onActionPartSearch" text="Search">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Button>
      <TextField id="partsSearchTxt" fx:id="partSearchTxt" layoutX="70.0" layoutY="78.0" prefHeight="27.0" prefWidth="257.0" />
      <TextField id="productSearchTxt" fx:id="productSearchTxt" layoutX="531.0" layoutY="78.0" prefHeight="27.0" prefWidth="208.0" />
      <Button id="productSearchBtn" fx:id="productSearchBtn" layoutX="762.0" layoutY="76.0" mnemonicParsing="false" onAction="#onActionProductSearch" text="Search">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Button>
      <Button fx:id="partsAddBtn" layoutX="14.0" layoutY="299.0" mnemonicParsing="false" onAction="#onActionPartAdd" text="Add" />
      <Button fx:id="partsModifyBtn" layoutX="261.0" layoutY="299.0" mnemonicParsing="false" onAction="#onActionPartModify" text="Modify" />
      <Button fx:id="partsDelBtn" layoutX="359.0" layoutY="299.0" mnemonicParsing="false" onAction="#onActionPartDelete" text="Delete" />
      <Button id="productsAddBtn" layoutX="435.0" layoutY="299.0" mnemonicParsing="false" text="Add" onAction="#onActionProductAdd"/>
      <Button id="productsModifyBtn" layoutX="683.0" layoutY="299.0" mnemonicParsing="false" text="Modify" onAction="#onActionProductModify"/>
      <Button id="productsDeleteBtn" layoutX="781.0" layoutY="299.0" mnemonicParsing="false" text="Delete" onAction="#onActionProductDelete"/>
      <Button id="exitBtn" layoutX="799.0" layoutY="340.0" mnemonicParsing="false" onAction="#onActionExit" text="Exit" />
   </children>
</AnchorPane>
